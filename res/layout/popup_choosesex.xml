<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customPopup"
    android:layout_width="330.0dip"
    android:layout_height="330.0dip"
    android:background="@color/gray"
    android:clickable="true" >

    <RelativeLayout
        android:layout_width="300.0dip"
        android:layout_height="300.0dip"
        android:background="@color/gray"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingTop="30dp" >


        <ImageView
            android:id="@+id/imagesview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_searching"
            android:padding="60dp"
            android:src="@drawable/icon_girl"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="87dp"
            android:background="@drawable/btn_start"
            android:paddingBottom="20.0dip"
            android:paddingLeft="50.0dip"
            android:paddingRight="50.0dip" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/title"
            android:layout_alignTop="@+id/title"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/title_friend" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/btnThoat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/icon_close" />

</RelativeLayout>